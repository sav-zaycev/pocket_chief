<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tabSelectedText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="customTextLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">?attr/cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">?attr/cornerRadius</item>
        <item name="boxCornerRadiusBottomStart">?attr/cornerRadius</item>
        <item name="boxCornerRadiusBottomEnd">?attr/cornerRadius</item>
        <item name="boxStrokeWidthFocused">?attr/strokeWidth</item>
    </style>


</resources>